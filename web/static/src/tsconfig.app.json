{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "shims-vue.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/utils/*.ts",
    "src/views/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2017", "dom", "scripthost"]
  }
}
